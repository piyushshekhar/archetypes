<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mojos>
     <mojo>
      <goal>start</goal>
      <description>Goal which starts the nodejs project</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>com.photon.phresco.plugins.nodejs.NodeJsPlugin</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <threadSafe>false</threadSafe>
	  <configuration>
      <parameters>
		<parameter>
			<name>
				<value lang="en">Show Settings</value>
			</name>
			<type>Boolean</type>
			<required>false</required>
			<editable>true</editable>
			<description></description>
			<key>showSettings</key>
			<multiple>false</multiple>
			<value>false</value>
			<sort>false</sort>
			<show>true</show>
			<dependency>environmentName</dependency>
		</parameter>
        <parameter>
			<name>
				<value lang="en">Environment</value>
			</name>
			<type>DynamicParameter</type>
			<dynamicParameter>
				<class>com.photon.phresco.impl.EnvironmentsParameterImpl</class>
				<dependencies>
					<dependency>
						<groupId>com.photon.phresco.commons</groupId>
						<artifactId>phresco-commons</artifactId>
						<type>jar</type>
						<version>2.0.0.31001-SNAPSHOT</version>
					</dependency>
				</dependencies>
			</dynamicParameter>
			<required>true</required>
			<editable>true</editable>
			<key>environmentName</key>
			<multiple>true</multiple>
			<sort>false</sort>
			<show>true</show>
			<value></value>
			<dependency>dataBase,fetchSql</dependency>
        </parameter>
		 <parameter>
                    <name>
                        <value lang="en">Execute Sql</value>
                    </name>
                    <type>Boolean</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description></description>
                    <key>executeSql</key>
                    <value>true</value>
                    <sort>false</sort>
                    <show>true</show>
                    <dependency>dataBase</dependency>
                </parameter>
                <parameter>
                    <name>
                        <value lang="en">DataBase</value>
                    </name>
                    <type>DynamicParameter</type>
                    <dynamicParameter>
                        <class>com.photon.phresco.framework.param.impl.DynamicDataBaseImpl</class>
                        <dependencies>
                            <dependency>
								<groupId>com.photon.phresco.framework</groupId>
								<artifactId>phresco-framework-impl</artifactId>
								<type>jar</type>
								<version>2.0.0.31001-SNAPSHOT</version>
                            </dependency>
                        </dependencies>
                    </dynamicParameter>
                    <required>false</required>
                    <editable>true</editable>
                    <description></description>
                    <key>dataBase</key>
                    <multiple>false</multiple>
                    <value></value>
                    <sort>false</sort>
                    <show>false</show>
                    <dependency>fetchSql</dependency>
                </parameter>
                <parameter>
                    <name>
                        <value lang="en"></value>
                    </name>
                    <type>DynamicParameter</type>
                    <dynamicParameter>
                        <class>com.photon.phresco.framework.param.impl.DynamicFetchSqlImpl</class>
                        <dependencies>
                            <dependency>
								<groupId>com.photon.phresco.framework</groupId>
								<artifactId>phresco-framework-impl</artifactId>
								<type>jar</type>
								<version>2.0.0.31001-SNAPSHOT</version>
                            </dependency>
                        </dependencies>
                    </dynamicParameter>
                    <required>false</required>
                    <editable>true</editable>
                    <description></description>
                    <key>fetchSql</key>
                    <multiple>false</multiple>
                    <value></value>
                    <sort>true</sort>
                    <show>false</show>
                </parameter>				
            </parameters>
      </configuration>
    </mojo>
	<mojo>
      <goal>stop</goal>
      <description>Goal which stops the nodejs project</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>com.photon.phresco.plugins.nodejs.NodeJsPlugin</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <threadSafe>false</threadSafe>
    </mojo>
</mojos>
